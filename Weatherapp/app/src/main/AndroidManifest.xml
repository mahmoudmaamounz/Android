<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androstock.myweatherapp" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.weatherapp.utils.WeatherApplication"
        android:allowBackup="true"
        android:icon="@drawable/clearday"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyACnWv_Uaqct-YlJih_EHeJm4QVgU47L2g" />
        <activity
            android:name="com.weatherapp.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.weatherapp.activity.ListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
